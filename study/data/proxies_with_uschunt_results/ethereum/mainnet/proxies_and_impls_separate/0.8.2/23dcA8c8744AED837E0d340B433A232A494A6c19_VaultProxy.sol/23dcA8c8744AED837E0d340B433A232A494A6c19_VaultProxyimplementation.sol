        uint256 _withdrawalId,
        address _user,
        address _token,
        uint256 _tokenId,
        bytes calldata _signatures
    ) public whenNotPaused onlyMappedToken(_token) {
        bytes32 _hash = keccak256(
            abi.encodePacked(
                "withdrawERC721",
                _withdrawalId,
                _user,
                _token,
