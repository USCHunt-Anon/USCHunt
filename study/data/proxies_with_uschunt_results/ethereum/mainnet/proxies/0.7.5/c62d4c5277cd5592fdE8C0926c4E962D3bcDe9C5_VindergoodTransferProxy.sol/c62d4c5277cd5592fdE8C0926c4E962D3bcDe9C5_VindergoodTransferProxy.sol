        require(
            OwnableDelegateProxy(msg.sender) == proxy,
            "Proxy transfer can only be called by the proxy"
        );
        require(
            proxies[to] == OwnableDelegateProxy(0),
            "Proxy transfer has existing proxy as destination"
        );

