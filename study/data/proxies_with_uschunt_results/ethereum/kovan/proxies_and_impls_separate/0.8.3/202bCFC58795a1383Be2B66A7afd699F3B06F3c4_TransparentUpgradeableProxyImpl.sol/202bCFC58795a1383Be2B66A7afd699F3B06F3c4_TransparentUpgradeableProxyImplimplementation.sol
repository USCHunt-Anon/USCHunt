  mapping(address => Liquidation) public lLiqs; // Mapping from Long XToken address to liquidation info.
  mapping(address => Liquidation) public sLiqs; // Mapping from Short XToken address to liquidation info.

  address public governor;
  address public pendingGovernor;
  uint public mintFeeBps; // in 1e4
  uint public burnFeeBps; // in 1e4
  uint public totalFee; // Total fee accumulated.
  uint8 public baseDecimals;
  uint8 public quoteDecimals;
  string public baseSymbol;

  /// The new governor is set.
  event SetGovernor(address governor);
  /// The pending governor is set.
  event SetPendingGovernor(address pendingGovernor);
  /// The governor sets the basis point fee of the bank.
  event SetFees(uint mintFeeBps, uint burnFeeBps);
  /// The governor withdraws fee from the bank.
  event WithdrawFee(uint amount);
  /// The caller mints token at specific price ceiling and price floor
  event Mint(
    address indexed caller,
    address indexed lToken,
    address indexed sToken,
    uint lPrice,
    uint sPrice,
    uint amount
  );
  /// The caller burns sToken and lToken
  event Burn(
    address indexed caller,
    address indexed lToken,
    address indexed sToken,
    uint lPrice,
    uint sPrice,
    uint amount
  );
  /// The governor creates token at specific price ceiling.
  event CreateSS(uint indexed sPrice, address sToken);
  /// The governor creates token at specific price floor.
  event CreateLL(uint indexed lPrice, address lToken);
  /// The short token is destroyed.
  event DestroySS(uint indexed sPrice, address sToken, uint supply);
  /// The long token is destroyed.
  event DestroyLL(uint indexed lPrice, address lToken, uint supply);
  /// The caller liquidates a long token with his pegged price and with a specific amount.
  event LiquidateLL(
    address indexed caller,
    address indexed liqToken,
    address indexed matchToken,
    uint lPrice,
    uint sPrice,
    uint amount
  );
  /// The caller liquidates a short token with his pegged price and with a specific amount.
  event LiquidateSS(
    address indexed caller,
    address indexed liqToken,
    address indexed matchToken,
    uint sPrice,
    uint lPrice,
    uint amount
  );
  /// The caller claims long token with a specific amount.
  event ClaimLL(address indexed caller, address indexed token, uint amount);
  /// The caller claims short token with a specific amount.
  event ClaimSS(address indexed caller, address indexed token, uint amount);

  modifier onlyGov() {
    require(msg.sender == governor, '!G');
    _;
  }

  /// @dev Initialize the contract. Can only be called once.
  /// @param _stable Stablecoin address.
  /// @param _oracle Price oracle address.
  /// @param _governor XBank governor to set to.
  /// @param _mintFeeBps Mint fee.
  /// @param _burnFeeBps Burn fee.
  /// @param _baseSymbol Base symbol.
  function initialize(
    IERC20 _stable,
    IOracle _oracle,
    address _governor,
    uint _mintFeeBps,
    uint _burnFeeBps,
    string memory _baseSymbol
  ) external initializer {
    require(address(_stable) != address(0), '!stable');
    require(_oracle.quote() == address(_stable), '!ST');
    require(_governor != address(0), '!gov');
    require(_mintFeeBps <= 1e4, '!mintfee');
    require(_burnFeeBps <= 1e4, '!burnfee');
    stable = _stable;
    oracle = _oracle;
    governor = _governor;
    mintFeeBps = _mintFeeBps;
    burnFeeBps = _burnFeeBps;
    baseSymbol = _baseSymbol;
    baseDecimals = IERC20Metadata(_oracle.base()).decimals();
    quoteDecimals = IERC20Metadata(_oracle.quote()).decimals();
    emit SetGovernor(_governor);
    emit SetFees(_mintFeeBps, _burnFeeBps);
  }

  /// @dev Set the new pending governor. Can only be called from current governor.
  /// @param _nextPendingGovernor Pending governor to set to.
  function setPendingGovernor(address _nextPendingGovernor) external onlyGov {
    pendingGovernor = _nextPendingGovernor;
    emit SetPendingGovernor(_nextPendingGovernor);
  }

  /// @dev Accept to become the governor. Can only be called from the pending governor.
  function acceptGovernor() external {
    require(msg.sender == pendingGovernor, '!G');
    governor = msg.sender;
    pendingGovernor = address(0);
    emit SetGovernor(msg.sender);
  }

  /// @dev Set mint & burn fees. Can only be called from the governor.
  /// @param _mintFeeBps New mint fee to set to.
  /// @param _burnFeeBps New burn fee to set to.
  function setFees(uint _mintFeeBps, uint _burnFeeBps) external onlyGov {
    require(_mintFeeBps <= 1e4, '!mintfee');
    require(_burnFeeBps <= 1e4, '!burnfee');
    mintFeeBps = _mintFeeBps;
    burnFeeBps = _burnFeeBps;
    emit SetFees(_mintFeeBps, _burnFeeBps);
  }

  /// @dev Withdraw fee from the accumulated fees. Can only be called from the governor.
  /// @param _amount Amount to withdraw fee.
  function withdrawFee(uint _amount) external onlyGov {
    totalFee -= _amount;
    emit WithdrawFee(_amount);
    stable.safeTransfer(msg.sender, _amount);
  }

  /// @dev Caller deposits stablecoins and mints certain amount of XToken pair.
  /// @param _amount Amount of the XTokens to mint. The decimal unit is XToken.decimals.
  /// @param _ll Long XToken price floor to mint. The decimal unit is oracle price decimals (18-base+quote).
  /// @param _ss Short XToken price ceiling to mint. The decimal unit is oracle price decimals (18-base+quote).
  function mint(
    uint _amount,
    uint _ll,
    uint _ss
  ) external {
    require(_amount > 0, '!0');
    require(_ll < _ss, '!LS');
    XToken lToken = _getLToken(_ll);
    XToken sToken = _getSToken(_ss);
    uint pay = ((_amount * (_ss - _ll)) + 1e18 - 1) / 1e18; // rounding up
    uint fee = (pay * mintFeeBps) / 1e4;
    totalFee += fee;
    lToken.mint(msg.sender, _amount);
    sToken.mint(msg.sender, _amount);
    emit Mint(msg.sender, address(lToken), address(sToken), _ll, _ss, _amount);
    stable.safeTransferFrom(msg.sender, address(this), pay + fee);
  }

  /// @dev Caller burns certain amount of XToken pair and receivees stablecoins back.
  /// @param _amount Amount of the XTokens to burn. The decimal unit is XToken.decimals.
  /// @param _ll Long XToken price floor to burn. The decimal unit is oracle price decimals (18-base+quote).
  /// @param _ss Short XToken price ceiling to burn. The decimal unit is oracle price decimals (18-base+quote).
  function burn(
    uint _amount,
    uint _ll,
    uint _ss
  ) external {
    require(_amount > 0, '!0');
    require(_ll < _ss, '!LS');
    XToken lToken = _getLToken(_ll);
    XToken sToken = _getSToken(_ss);
    uint pay = (_amount * (_ss - _ll)) / 1e18;
    uint fee = (pay * burnFeeBps) / 1e4;
    totalFee += fee;
    lToken.burn(msg.sender, _amount);
    sToken.burn(msg.sender, _amount);
    emit Burn(msg.sender, address(lToken), address(sToken), _ll, _ss, _amount);
    stable.safeTransfer(msg.sender, pay - fee);
  }

  /// @dev Create new Long XToken with specific price floor. Can only be called from the governor.
  /// @param _ll Price floor for the Long XToken to create. The decimal unit is oracle price decimals (18-base+quote).
  /// @notice The XToken can only be created if the price floor is not within liquidation threshold of the current reference price.
  function createLL(uint _ll) external onlyGov returns (address) {
    require(_ll * 1e18 <= oracle.getPrice() * LIQUIDATION_THRESHOLD, '!P');
    require(lTokens[_ll] == address(0), '!E');
    uint priceFloorLL = _ll / 10**(18 + quoteDecimals - baseDecimals);
    address lToken = address(
      new XToken(string(abi.encodePacked(baseSymbol, '-', priceFloorLL.toString())), baseDecimals)
    );
    lTokens[_ll] = lToken;
    emit CreateLL(_ll, lToken);
    return lToken;
  }

  /// @dev Create new Short XToken with specific price ceiling. Can only be called from the governor.
  /// @param _ss Price ceiling for the Short XToken to create. The decimal unit is oracle price decimals (18-base+quote).
  /// @notice The XToken can only be created if the price ceiling is not within liquidation threshold of the current reference price.
  function createSS(uint _ss) external onlyGov returns (address) {
    require(_ss * LIQUIDATION_THRESHOLD >= oracle.getPrice() * 1e18, '!P');
    require(sTokens[_ss] == address(0), '!E');
    uint priceFloorSS = _ss / 10**(18 + quoteDecimals - baseDecimals);
    address sToken = address(
      new XToken(string(abi.encodePacked(priceFloorSS.toString(), '-', baseSymbol)), baseDecimals)
    );
    sTokens[_ss] = sToken;
    emit CreateSS(_ss, sToken);
    return sToken;
  }

  /// @dev Destroy an existing Long XToken.
  /// @param _ll Price floor for the Long XToken to destroy. The decimal unit is oracle price decimals (18-base+quote).
  /// @notice The XToken can only be destroyed if the price floor is within liquidation threshold of the current reference price.
  function destroyLL(uint _ll) external {
    require(_ll * 1e18 > oracle.getPrice() * LIQUIDATION_THRESHOLD, '!P');
    XToken lToken = _getLToken(_ll);
    lTokens[_ll] = address(0);
    uint supply = lToken.totalSupply();
    lLiqs[address(lToken)] = Liquidation({cut: _ll, left: supply, sold: 0, bal: 0});
    emit DestroyLL(_ll, address(lToken), supply);
  }

  /// @dev Destroy an existing Short XToken.
  /// @param _ss Price ceiling for the Short XToken to destroy. The decimal unit is oracle price decimals (18-base+quote).
  /// @notice The XToken can only be destroyed if the price ceiling is within liquidation threshold of the current reference price.
  function destroySS(uint _ss) external {
    require(_ss * LIQUIDATION_THRESHOLD < oracle.getPrice() * 1e18, '!P');
    XToken sToken = _getSToken(_ss);
    sTokens[_ss] = address(0);
    uint supply = sToken.totalSupply();
    sLiqs[address(sToken)] = Liquidation({cut: _ss, left: supply, sold: 0, bal: 0});
    emit DestroySS(_ss, address(sToken), supply);
  }

  /// @dev Liquidate Long XToken. Caller supplies short XToken to match and redeem underlying stablecoins at a premium.
  /// @param _token Liquidated long XToken address.
  /// @param _ss Price ceiling for the Short XToken to match. The decimal unit is oracle price decimals (18-base+quote).
  /// @param _amount Amount of XTokens to liquidate. The decimal unit is XToken.decimals.
  function liquidateLL(
    address _token,
    uint _ss,
    uint _amount
  ) external {
    Liquidation storage liq = lLiqs[_token];
    require(liq.cut != 0, '!C');
    require(_amount > 0 && _amount <= liq.left, '!A');
    XToken sToken = _getSToken(_ss);
    sToken.burn(msg.sender, _amount);
    uint price = Math.max((oracle.getPrice() * LIQUIDATION_PREMIUM) / 1e18, liq.cut);
    require(price < _ss, '!LS');
    liq.left -= _amount;
    liq.sold += _amount;
    liq.bal += (_amount * (price - liq.cut)) / 1e18;
    uint pay = (_amount * (_ss - price)) / 1e18;
    uint fee = (pay * burnFeeBps) / 1e4;
    totalFee += fee;
    emit LiquidateLL(msg.sender, _token, address(sToken), liq.cut, _ss, _amount);
    stable.safeTransfer(msg.sender, pay - fee);
  }

  /// @dev Liquidate Short XToken. Caller supplies long XToken to match and redeem underlying stablecoins at a premium.
  /// @param _token Liquidated short XToken address.
  /// @param _ll Price floor for the Long XToken to match. The decimal unit is The decimal unit is oracle price decimals (18-base+quote).
  /// @param _amount Amount of XTokens to liquidate. The decimal unit is XToken.decimals.
  function liquidateSS(
    address _token,
    uint _ll,
    uint _amount
  ) external {
    Liquidation storage liq = sLiqs[_token];
    require(liq.cut != 0, '!C');
    require(_amount > 0 && _amount <= liq.left, '!A');
    XToken lToken = _getLToken(_ll);
    lToken.burn(msg.sender, _amount);
    uint price = Math.min((oracle.getPrice() * 1e18) / LIQUIDATION_PREMIUM, liq.cut);
    require(_ll < price, '!LS');
    liq.left -= _amount;
    liq.sold += _amount;
    liq.bal += (_amount * (liq.cut - price)) / 1e18;
    uint pay = (_amount * (price - _ll)) / 1e18;
    uint fee = (pay * burnFeeBps) / 1e4;
    totalFee += fee;
    emit LiquidateSS(msg.sender, _token, address(lToken), liq.cut, _ll, _amount);
    stable.safeTransfer(msg.sender, pay - fee);
  }

  /// @dev Deposit liquidated Long XToken to redeem the underlying stablecoins.
  /// @param _token Liquidated Long XToken address.
  /// @param _amount Amount of XToken to claim. The decimal unit is XToken.decimals.
  function claimLL(address _token, uint _amount) external {
    emit ClaimLL(msg.sender, _token, _amount);
    XToken(_token).burn(msg.sender, _amount);
    _claim(lLiqs[_token], _amount);
  }

  /// @dev Deposit liquidated Short XToken to redeem the underlying stablecoins.
  /// @param _token Liquidated Short XToken address.
  /// @param _amount Amount of XToken to claim. The decimal unit is XToken.decimals.
  function claimSS(address _token, uint _amount) external {
    emit ClaimSS(msg.sender, _token, _amount);
    XToken(_token).burn(msg.sender, _amount);
    _claim(sLiqs[_token], _amount);
  }

  /// @dev Claim stablecoins proportionally to the liquidated balance.
  /// @param _liq Liquidation info of the liquidated XToken.
  /// @param _amount Amount of XToken to claim. The decimal unit is XToken.decimals.
  function _claim(Liquidation storage _liq, uint _amount) internal {
    require(_liq.cut != 0, '!C');
    require(_amount > 0 && _amount <= _liq.sold, '!A');
    uint pay = (_amount * _liq.bal) / _liq.sold;
    _liq.bal -= pay;
    _liq.sold -= _amount;
    stable.safeTransfer(msg.sender, pay);
  }

  /// @dev Get the current Long XToken given price floor.
  /// @param _ll Price floor of the Long XToken to get info of. The decimal unit is oracle price decimals (18-base+quote).
  function _getLToken(uint _ll) internal returns (XToken) {
    address lToken = lTokens[_ll];
    require(lToken != address(0), '!L');
    return XToken(lToken);
  }

  /// @dev Get the current Short XToken given price ceiling.
  /// @param _ss Price ceiling of the Short XToken to get info of. The decimal unit is oracle price decimals (18-base+quote).
  function _getSToken(uint _ss) internal returns (XToken) {
    address sToken = sTokens[_ss];
    require(sToken != address(0), '!S');
    return XToken(sToken);
  }
}
