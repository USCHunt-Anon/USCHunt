    uint _totalSupply,
    address _predicateProxy
  ) ExternStateToken(_proxy, _tokenState, TOKEN_NAME, TOKEN_SYMBOL, _totalSupply, DECIMALS, _owner) 
  public {
    predicateProxy = _predicateProxy;
  }

  function transfer(address _to, uint _value)
  external
  optionalProxy
  returns(bool) {
    _canTransfer(messageSender, _to, _value);
    
    _transferByProxy(messageSender, _to, _value);
  }

  function setPredicateProxy(address _predicateProxy)
  external
  onlyOwner {
    require(_predicateProxy != address(0),
      "Address cannot be empty");
    
    predicateProxy = _predicateProxy;
  }

  function transferFrom(
    address _from,
    address _to,
    uint _value
  ) external
  optionalProxy
  returns(bool) {
    _canTransfer(messageSender, _to, _value);

    return _transferFromByProxy(
      messageSender, 
      _from, 
      _to, 
      _value
    );
  }

  function mint(address _user, uint _amount)
  external {
    require(messageSender == predicateProxy,
      "Caller is not allowed to mint");

    tokenState.setBalanceOf(_user, tokenState.balanceOf(_user).add(_amount));

    emitTransfer(address(0), _user, _amount);    
  }

  function _canTransfer(address _from, address _to, uint _value)
  internal {}

