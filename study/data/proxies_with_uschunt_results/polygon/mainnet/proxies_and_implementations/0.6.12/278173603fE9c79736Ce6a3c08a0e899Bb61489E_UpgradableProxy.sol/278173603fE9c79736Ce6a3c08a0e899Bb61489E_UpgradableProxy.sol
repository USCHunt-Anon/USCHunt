contract PolydexNFTExchange is  ERC721Holder, Pausable, Initializable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;
    using Address for address;
    using EnumerableMap for EnumerableMap.UintToUintMap;
    using EnumerableSet for EnumerableSet.UintSet;

    // All the needed info around a lottery
    struct NftInfo {
        IERC721 nft;
        IERC20 quoteErc20;
    }

    struct AskEntry {
        uint256 nftId;
        uint256 tokenId;
        uint256 price;
    }

    // governance
    address public operator;


    // Flag if stake token is native EVM token
    uint256 public fee;
    address payable feeWallet;
    bool public isNativeTokenStaking;
    uint256 public totalWhiteListNft;
    mapping(uint256 => EnumerableMap.UintToUintMap) private _asksMap;
    mapping(uint256 => mapping(uint256 => address)) private _tokenSellers;
    mapping(uint256 => mapping(address => EnumerableSet.UintSet)) private _userSellingTokens;
    // NFT ID's to info
    mapping(uint256 => NftInfo) public allNfts;

    event Trade(uint256 nftId, address indexed seller, address indexed buyer, uint256 indexed tokenId, uint256 price);
    event Ask(address indexed seller, uint256 nftId, uint256 indexed tokenId, uint256 price);
    event CancelSellToken(address indexed seller, uint256 nftId, uint256 indexed tokenId);

    //-------------------------------------------------------------------------
    // MODIFIERS
    //-------------------------------------------------------------------------
    modifier onlyOperator() {
        require(operator == msg.sender, "caller is not the operator");
        _;
    }


    /* ========== GOVERNANCE ========== */

    function initialize(address _operator, uint256 _fee, address payable _feeWallet) public initializer {
        require(_fee < 100, '> 100%');
        require(_feeWallet != address(0), '!address(0)');
        fee = _fee;
        operator = _operator;
        feeWallet = _feeWallet;
    }

    function transferOperator(address newOperator) external onlyOperator {
        require(newOperator != address(0), "Contracts cannot be 0 address");
        operator = newOperator;
    }

    function setFee(uint256 _fee) public onlyOperator {
        require(_fee < 100, '> 100%');
        fee = _fee;
    }

    function setFeeWallet(address payable _feeWallet) public onlyOperator {
        require(_feeWallet != address(0), '!address(0)');
        feeWallet = _feeWallet;
    }

    function listNft(address _nftAddress, address _quoteErc20Address) public onlyOperator {
        require(_nftAddress != address(this) && _quoteErc20Address != address(this));
        allNfts[totalWhiteListNft] = NftInfo(IERC721(_nftAddress), IERC20(_quoteErc20Address));
        totalWhiteListNft = totalWhiteListNft.add(1);
    }

    /// @notice Deposits native EVM tokens into the IAO contract as per the value sent
    ///   in the transaction.
    function buyTokenNative(uint256 _nftId, uint256 _tokenId) external payable whenNotPaused {
        require(_nftId < totalWhiteListNft, 'Not white list nft');
        require(address(allNfts[_nftId].quoteErc20) == address(0), 'Need to pay MATIC');
        require(msg.sender != address(0) && msg.sender != address(this), 'Wrong msg sender');
        require(_asksMap[_nftId].contains(_tokenId), 'Token not in sell book');
        allNfts[_nftId].nft.safeTransferFrom(address(this), msg.sender, _tokenId);
        uint256 price = _asksMap[_nftId].get(_tokenId);
        require(msg.value == price, 'not enough balance');
        address payable toPayable = address(uint160(_tokenSellers[_nftId][_tokenId]));
        _asksMap[_nftId].remove(_tokenId);
        uint256 amountFee = price.mul(fee).div(100);
        uint256 amountSellerReceiver = price.sub(amountFee);
        // send to FeeWallet
        feeWallet.transfer(amountFee);
        //sèn to Seller
        toPayable.transfer(amountSellerReceiver);
        _userSellingTokens[_nftId][_tokenSellers[_nftId][_tokenId]].remove(_tokenId);
        emit Trade(_nftId, _tokenSellers[_nftId][_tokenId], msg.sender, _tokenId, price);
        delete _tokenSellers[_nftId][_tokenId];
    }

    function buyToken(uint256 _nftId, uint256 _tokenId) public whenNotPaused {
        require(_nftId < totalWhiteListNft, 'Not white list nft');
        require(msg.sender != address(0) && msg.sender != address(this), 'Wrong msg sender');
        require(_asksMap[_nftId].contains(_tokenId), 'Token not in sell book');
        allNfts[_nftId].nft.safeTransferFrom(address(this), msg.sender, _tokenId);
        uint256 price = _asksMap[_nftId].get(_tokenId);
        uint256 amountFee = price.mul(fee).div(100);
        uint256 amountSellerReceiver = price.sub(amountFee);
        // send to FeeWallet
        allNfts[_nftId].quoteErc20.safeTransferFrom(msg.sender, feeWallet, amountFee);
        //sèn to Seller
        allNfts[_nftId].quoteErc20.safeTransferFrom(msg.sender, _tokenSellers[_nftId][_tokenId], amountSellerReceiver);
        _asksMap[_nftId].remove(_tokenId);
        _userSellingTokens[_nftId][_tokenSellers[_nftId][_tokenId]].remove(_tokenId);
        emit Trade(_nftId, _tokenSellers[_nftId][_tokenId], msg.sender, _tokenId, price);
        delete _tokenSellers[_nftId][_tokenId];
    }

    function setCurrentPrice(uint256 _nftId, uint256 _tokenId, uint256 _price) public whenNotPaused {
        require(_nftId < totalWhiteListNft, 'Not white list nft');
        require(_userSellingTokens[_nftId][msg.sender].contains(_tokenId), 'Only Seller can update price');
        require(_price > 0, 'Price must be granter than zero');
        _asksMap[_nftId].set(_tokenId, _price);
        emit Ask(msg.sender, _nftId, _tokenId, _price);
    }

    function readyToSellToken(uint256 _nftId, uint256 _tokenId, uint256 _price) public whenNotPaused {
        require(_nftId < totalWhiteListNft, 'Not white list nft');
        require(msg.sender == allNfts[_nftId].nft.ownerOf(_tokenId), 'Only Token Owner can sell token');
        require(_price > 0, 'Price must be granter than zero');
        allNfts[_nftId].nft.safeTransferFrom(address(msg.sender), address(this), _tokenId);
        _asksMap[_nftId].set(_tokenId, _price);
        _tokenSellers[_nftId][_tokenId] = address(msg.sender);
        _userSellingTokens[_nftId][msg.sender].add(_tokenId);
        emit Ask(msg.sender, _nftId, _tokenId, _price);
    }

    function cancelSellToken(uint256 _nftId, uint256 _tokenId) public whenNotPaused {
        require(_nftId < totalWhiteListNft, 'Not white list nft');
        require(_userSellingTokens[_nftId][msg.sender].contains(_tokenId), 'Only Seller can cancel sell token');
        allNfts[_nftId].nft.safeTransferFrom(address(this), msg.sender, _tokenId);
        _asksMap[_nftId].remove(_tokenId);
        _userSellingTokens[_nftId][_tokenSellers[_nftId][_tokenId]].remove(_tokenId);
        delete _tokenSellers[_nftId][_tokenId];
        emit CancelSellToken(msg.sender, _nftId, _tokenId);
    }

    function getAddressByItem(uint256 _nftId, uint256 _tokenId) public view returns (address) {
        require(_nftId < totalWhiteListNft, 'Not white list nft');
        address owner = _tokenSellers[_nftId][_tokenId];
        return owner;
    }

    function getAskLength(uint256 _nftId) public view returns (uint256) {
        require(_nftId < totalWhiteListNft, 'Not white list nft');
        return _asksMap[_nftId].length();
    }

    function getAsks(uint256 _nftId) public view returns (AskEntry[] memory) {
        require(_nftId < totalWhiteListNft, 'Not white list nft');
        AskEntry[] memory asks = new AskEntry[](_asksMap[_nftId].length());
        for (uint256 i = 0; i < _asksMap[_nftId].length(); ++i) {
            (uint256 tokenId, uint256 price) = _asksMap[_nftId].at(i);
            asks[i] = AskEntry({nftId: _nftId, tokenId: tokenId, price: price});
        }
        return asks;
    }

    function getAsksDesc(uint256 _nftId) public view returns (AskEntry[] memory) {
        require(_nftId < totalWhiteListNft, 'Not white list nft');
        AskEntry[] memory asks = new AskEntry[](_asksMap[_nftId].length());
        if (_asksMap[_nftId].length() > 0) {
            for (uint256 i = _asksMap[_nftId].length() - 1; i > 0; --i) {
                (uint256 tokenId, uint256 price) = _asksMap[_nftId].at(i);
                asks[_asksMap[_nftId].length() - 1 - i] = AskEntry({nftId: _nftId, tokenId: tokenId, price: price});
            }
            (uint256 tokenId, uint256 price) = _asksMap[_nftId].at(0);
            asks[_asksMap[_nftId].length() - 1] = AskEntry({nftId: _nftId, tokenId: tokenId, price: price});
        }
        return asks;
    }

    function getAsksByPage(uint256 _nftId, uint256 page, uint256 size) public view returns (AskEntry[] memory) {
        require(_nftId < totalWhiteListNft, 'Not white list nft');
        if (_asksMap[_nftId].length() > 0) {
            uint256 from = page == 0 ? 0 : (page - 1) * size;
            uint256 to = Math.min((page == 0 ? 1 : page) * size, _asksMap[_nftId].length());
            AskEntry[] memory asks = new AskEntry[]((to - from));
            for (uint256 i = 0; from < to; ++i) {
                (uint256 tokenId, uint256 price) = _asksMap[_nftId].at(from);
                asks[i] = AskEntry({nftId: _nftId, tokenId: tokenId, price: price});
                ++from;
            }
            return asks;
        } else {
            return new AskEntry[](0);
        }
    }

    function getAsksByPageDesc(uint256 _nftId,uint256 page, uint256 size) public view returns (AskEntry[] memory) {
        require(_nftId < totalWhiteListNft, 'Not white list nft');
        if (_asksMap[_nftId].length() > 0) {
            uint256 from = _asksMap[_nftId].length() - 1 - (page == 0 ? 0 : (page - 1) * size);
            uint256 to = _asksMap[_nftId].length() - 1 - Math.min((page == 0 ? 1 : page) * size - 1, _asksMap[_nftId].length() - 1);
            uint256 resultSize = from - to + 1;
            AskEntry[] memory asks = new AskEntry[](resultSize);
            if (to == 0) {
                for (uint256 i = 0; from > to; ++i) {
                    (uint256 tokenId, uint256 price) = _asksMap[_nftId].at(from);
                    asks[i] = AskEntry({nftId: _nftId, tokenId: tokenId, price: price});
                    --from;
                }
                (uint256 tokenId, uint256 price) = _asksMap[_nftId].at(0);
                asks[resultSize - 1] = AskEntry({nftId: _nftId, tokenId: tokenId, price: price});
            } else {
                for (uint256 i = 0; from >= to; ++i) {
                    (uint256 tokenId, uint256 price) = _asksMap[_nftId].at(from);
                    asks[i] = AskEntry({nftId: _nftId, tokenId: tokenId, price: price});
                    --from;
                }
            }
            return asks;
        }
        return new AskEntry[](0);
    }

    function getAsksByUser(uint256 _nftId, address user) public view returns (AskEntry[] memory) {
        require(_nftId < totalWhiteListNft, 'Not white list nft');
        AskEntry[] memory asks = new AskEntry[](_userSellingTokens[_nftId][user].length());
        for (uint256 i = 0; i < _userSellingTokens[_nftId][user].length(); ++i) {
            uint256 tokenId = _userSellingTokens[_nftId][user].at(i);
            uint256 price = _asksMap[_nftId].get(tokenId);
            asks[i] = AskEntry({nftId: _nftId, tokenId: tokenId, price: price});
        }
        return asks;
    }

    function getAsksByUserDesc(uint256 _nftId, address user) public view returns (AskEntry[] memory) {
        require(_nftId < totalWhiteListNft, 'Not white list nft');
        AskEntry[] memory asks = new AskEntry[](_userSellingTokens[_nftId][user].length());
        if (_userSellingTokens[_nftId][user].length() > 0) {
            for (uint256 i = _userSellingTokens[_nftId][user].length() - 1; i > 0; --i) {
                uint256 tokenId = _userSellingTokens[_nftId][user].at(i);
                uint256 price = _asksMap[_nftId].get(tokenId);
                asks[_userSellingTokens[_nftId][user].length() - 1 - i] = AskEntry({nftId: _nftId, tokenId: tokenId, price: price});
            }
            uint256 tokenId = _userSellingTokens[_nftId][user].at(0);
            uint256 price = _asksMap[_nftId].get(tokenId);
            asks[_userSellingTokens[_nftId][user].length() - 1] = AskEntry({nftId: _nftId, tokenId: tokenId, price: price});
        }
        return asks;
    }

    function pause() public onlyOperator whenNotPaused {
        _pause();
    }

    function unpause() public onlyOperator whenPaused {
        _unpause();
    }
}