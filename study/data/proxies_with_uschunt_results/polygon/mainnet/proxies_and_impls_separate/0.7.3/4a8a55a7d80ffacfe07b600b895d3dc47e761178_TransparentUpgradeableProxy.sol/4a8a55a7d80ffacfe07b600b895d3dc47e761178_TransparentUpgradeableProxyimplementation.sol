  /// @param token address of the token
  function getUSDPrice(address token) public view override returns (uint256, uint256) {
    require(address(usdPriceFeeds[token]) != address(0), "ChainLinkPriceOracle: NoUSDPriceSource");
    (, int256 price, , uint256 lastUpdate, ) = usdPriceFeeds[token].latestRoundData();
    uint256 decimals = uint256(usdPriceFeeds[token].decimals());
    return (uint256(price).mul(1e18) / (10**decimals), lastUpdate);
  }

