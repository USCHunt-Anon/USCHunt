        address indexed nft_address,
        uint256 box_id,
        string name,
        uint32 start_time,
        uint32 end_time,
        bool sell_all
    );

    event OpenSuccess(
        uint256 box_id,
        address customer,
        address nft_address,
        uint256 amount,
        uint256[] tokenIds
    );

    event CancelSuccess(
        uint256 indexed box_id,
        address indexed creator
    );

    event ClaimPayment (
        address indexed creator,
        uint256 indexed box_id,
        address token_address,
        uint256 amount,
        uint256 timestamp
    );

