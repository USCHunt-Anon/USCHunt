        } else {
            IERC20 token = IERC20(paymentToken);
            require(token.balanceOf(_buyer) >= _price, "Store: Not enough funds to purchase");

            uint256 fee = _price.mul(launchpadFee).div(FEE_DIVIDER);
            uint256 priceWithoutFee = _price.sub(fee);

            if (fee > 0) {
                token.safeTransferFrom(_buyer, owner, fee);
            }

            token.safeTransferFrom(_buyer, salesPerson, priceWithoutFee);
        }

        IERC1155(collection).safeTransferFrom(salesPerson, _buyer, _tokenId, _amount, "");
    }
}