        Card storage _currentCard = cards[_cardId];
        require(!_currentCard.isFinished, "Store: this card is out of stoke");

        require(
            _currentCard.currentAmount >= _amount,
            "Store: Order exceeds the max number of available NFTs"
        );

        uint256 _currentBoughtAmount = purchasedHistories[_currentCard.tokenId][msg.sender];

        require(
            _currentBoughtAmount < limitPerWallet,
            "Store: Order exceeds the max limit of NFTs per wallet"
        );

        require(
            (block.timestamp.sub(startSale)).mod(tierSalePeriod) >= _tier && _tier < 4,
            "Store: You are not eligible to buy this card now"
        );

        address signer = recoverSigner(collection, msg.sender, _cardId, _tier, _v, _r, _s);
        require(launchpad.isTrustedSigner(signer), "Store: invalid signature or data");

        uint256 availableToBuy = limitPerWallet.sub(_currentBoughtAmount);
        if (availableToBuy > _amount) {
            availableToBuy = _amount;
        }

        uint256 _price = _currentCard.basePrice.mul(availableToBuy);

        transferAssets(msg.sender, _price, _currentCard.tokenId, availableToBuy);

        _currentCard.currentAmount = _currentCard.currentAmount.sub(availableToBuy);
        if (_currentCard.currentAmount == 0) {
            _currentCard.isFinished = true;
        }

        purchasedHistories[_currentCard.tokenId][msg.sender] = uint8(
