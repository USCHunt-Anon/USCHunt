pragma solidity ^0.8.3;





contract Referral is  IReferral,OwnableUpgradeable,AccessControlUpgradeable {

    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN_ROLE");

    ITier public tier;
    uint8 public minTierEntry; // the min tier required from which users can start joining the app

    mapping(address => bool) public isWhiteListed; 
    mapping(address => uint256) public userInvited;
    mapping(bytes32 => Code) public userCodes;

    /* ========== Initialize ========== */

    function initialize(address _tier) public initializer{
         tier = ITier(_tier);
         __Ownable_init();
         __AccessControl_init();
    }

    /* Checks if the user address account is eligible to start using the app
       User either have to be whitelisted or a member of a tier that starts by
       at least the minTierEntry */
    function canJoin(address account) external override view returns(bool result){
        result = false;
        ITier.Tier memory userTier = tier.getTier(account);
        if(userTier.divId <= minTierEntry || isWhiteListed[account])
        {
                result = true;
        }
    }

    /* @user can create a referral code where it can 
       be used by other accounts in order to get whitelisted.
       @user should have invitation Slots available and 
       the code shouldn't be used before */
    function createReferral(bytes32 _hash) external {
        if(!(hasRole(ADMIN_ROLE, _msgSender()) || owner() == _msgSender()))
        {
             ITier.Tier memory userTier = tier.getTier(_msgSender());
             require(userInvited[_msgSender()] < userTier.inviteCount ,"No invites left");
        }
       require(userCodes[_hash].owner == address(0) ,"Code already used");
       
       userCodes[_hash].owner = _msgSender();

       emit CodeCreated(_msgSender(),block.timestamp);
    }

     /* @user can create a referral code where it can 
       be used by other accounts in order to get whitelisted.
       @user should have invitation Slots available and 
       the code shouldn't be used before */
    function createBulkReferral(bytes32[] calldata _hashs) external onlyAdmins{
        for (uint256 i = 0; i < _hashs.length; i++) {
            bytes32 _hash = _hashs[i];
            require(userCodes[_hash].owner == address(0) ,"Code already used");
            userCodes[_hash].owner = _msgSender();
         }
    }

    /* @user can use a referral code in order to get WL.
       the function checks if the code belongs to an owner
       and that owner still have invitation lefts */
    function useReferral(address account,string memory _code) external {
        bytes32 _hash = keccak256(abi.encodePacked(_code)); // we're using a hash system to keep the code safe from unwanted users 
        Code storage code = userCodes[_hash];
        require(code.owner != address(0) && code.owner != account ,"No codes generated"); 
        require(code.user == address(0) ,"Code was redeemed"); 
        require(!isWhiteListed[account] ,"Already Whitelisted"); // checks if the user is already whitelisted
        
        address codeOwner = code.owner; 
        ITier.Tier memory userTier = tier.getTier(codeOwner);

        if(!(hasRole(ADMIN_ROLE, codeOwner) || owner() == codeOwner))
        {
          require(userInvited[codeOwner] < userTier.inviteCount ,"No invites left"); //checks the owner if he has invitation slots left 
        }

        code.user = account;
        userInvited[codeOwner]+=1;
        isWhiteListed[account] = true; // add the user of the code to the whitelisted array so they can then join the app

        emit CodeUsed(_code,account,block.timestamp);
    }

    /* @admin can manually add WL addresses or remove them */ 
    function updateWhiteList(address account, bool excluded) external onlyAdmins{
         isWhiteListed[account] = excluded;
    }

    function updateWhiteListBatch(address[] memory accounts, bool excluded) external onlyAdmins{
         for (uint256 i = 0; i < accounts.length; i++) {
             isWhiteListed[accounts[i]] = excluded;
         }
    }


    function setMinEntry(uint8 _minTierEntry) external onlyAdmins {
         minTierEntry = _minTierEntry;
    }

    function updateTier(address _tier) external onlyAdmins {
         tier = ITier(_tier);
    }    

    function addAdminRole(address admin) public onlyOwner {
        _setupRole(ADMIN_ROLE, admin);
    }

    function revokeAdminRole(address admin) public onlyAdmins {
        revokeRole(ADMIN_ROLE, admin);
    }

    function adminRole(address admin) public view returns (bool) {
        return hasRole(ADMIN_ROLE, admin);
    }

    modifier onlyAdmins() {
        require(
            hasRole(ADMIN_ROLE, _msgSender()) || owner() == _msgSender(),
            "You don't have permission"
        );
        _;
    }

    function wasUsed(address account,string memory _code) public view returns (bool result) {
        bytes32 _hash = keccak256(abi.encodePacked(_code)); // we're using a hash system to keep the code safe from unwanted users 
        Code storage code = userCodes[_hash];

        result = true;

        if(code.owner != address(0) && code.owner != account && code.user == address(0) && !isWhiteListed[account])
        {
            address codeOwner = code.owner; 
            ITier.Tier memory userTier = tier.getTier(codeOwner);
            if(!(hasRole(ADMIN_ROLE, codeOwner) || owner() == codeOwner))
            {
                if(userInvited[codeOwner] < userTier.inviteCount)
                {
                    result = false;
                }
            }
            else{
                result = false;
            }

        }

        return result;
    }

    /* ========== EVENTS ========== */
    event CodeCreated(address user,uint256 time);
    event CodeUsed(string indexed code,address user,uint256 time);

    
}