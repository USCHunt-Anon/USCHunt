contract CocosTapFantasyBlindBox is Governance, VRFConsumerBaseUpgradable, ReentrancyGuard {

    using Address for address;
    using SafeERC20 for IERC20;
    using SafeMath for uint256;

    bytes32 internal keyHash;
    uint256 internal fee;
    address internal linkToken;
    uint256[] public rateArray;// [40,75,100] ==> 40% 35% 35%
    uint256[][] public levelArray; // R SR SSR
    
    uint256 public baseRate;

    uint256 public currentProj;
    uint256 public startTime;

    ICocosBlindBoxNFT internal cocosBlindBoxNFT;

    address public approveAddress;
    IERC721 public tapFantasy;

    mapping(bytes32 => address) public reqIdByAddress;
    mapping(bytes32 => uint256) public reqIdByTokenId;

    event eveNFTReceived (
        address operator,
        address indexed from,
        uint256 indexed id,
        bytes data
    );

    event eveClaim (
        address indexed sender,
        uint256 indexed tokenId,
        bytes32 reqId
    );

    event eveTapNFT (
        address indexed sender,
        uint256 indexed tokenId,
        uint256 nftId
    );
    
    // Flag of initialize data
    bool private initialized;

    function initialize(
        address vrfCoordinator_,
        address linkToken_,
        bytes32 keyHash_,
        uint256 fee_,
        ICocosBlindBoxNFT cocosBlindBoxNFT_,
        address approveAddress_
        ) public {
            require(!initialized, "initialize: Already initialized!");
            VRFConsumerBaseUpgradable.vrfInitialize(
                vrfCoordinator_,
                linkToken_
            );
            keyHash = keyHash_;
            fee = fee_;
            
            linkToken = linkToken_;
            cocosBlindBoxNFT = cocosBlindBoxNFT_;
            approveAddress = approveAddress_;
            _governance = msg.sender;
            initialized = true;
    }

    function claim(uint256 tokenId) public nonReentrant {
        require(!Address.isContract(msg.sender), "CocosTapFantasyBlindBox: can't call");
        require(LINK.balanceOf(address(this)) >= fee, "CocosTapFantasyBlindBox: Not enough LINK - fill contract with faucet");
        
        uint256 rule = cocosBlindBoxNFT.getRule(tokenId);
        require(rule == currentProj, "CocosTapFantasyBlindBox: The blind box is not allowed to be opened");
        
        require(startTime > 0, "CocosBlindBoxNFT: BlindBox not exist");
        require(block.timestamp > startTime, "CocosBlindBoxNFT: not start");


        cocosBlindBoxNFT.safeTransferFrom(msg.sender, address(this), tokenId);
        cocosBlindBoxNFT.burn(tokenId);

        uint256 rateArrLen = rateArray.length;
        require(rateArrLen > 0, "CocosBlindBoxNFT:claim over");

        uint256 levelArrayLen = levelArray.length;
        require(levelArrayLen > 0, "CocosBlindBoxNFT:claim level over");

        if (rateArrLen == 1) {
            uint256[] storage idArray = levelArray[0];
            uint256 nftID = idArray[idArray.length.sub(1)];
            idArray.pop();
            if (idArray.length == 0) {
                rateArray.pop();
            }
            tapFantasy.safeTransferFrom(approveAddress, msg.sender, nftID);
            
            emit eveTapNFT(msg.sender, tokenId, nftID);
            return;
        }

        bytes32 requestId = requestRandomness(keyHash, fee);
        reqIdByAddress[requestId] = msg.sender;
        reqIdByTokenId[requestId] = tokenId;
        emit eveClaim(msg.sender, tokenId, requestId);
    }

    /**
     * Callback function used by VRF Coordinator
     */
    function fulfillRandomness(bytes32 requestId, uint256 randomness) internal override {
        address addr = reqIdByAddress[requestId];

        uint256 rateArrLen = rateArray.length;
        require(rateArrLen > 0, "claim over");
        
        uint256 _qualityBase = 10000;
        uint256 quality = randomness%_qualityBase;
        
        uint256 nftID = 0;
        for (uint256 i = 0; i < rateArray.length; i++) {
            if (quality <= _qualityBase.mul(rateArray[i]).div(baseRate)) {
                uint256[] storage idArray = levelArray[i];
                
                uint256 currIdLength = idArray.length;
                uint256 levelsLength = levelArray.length;

                nftID = idArray[currIdLength.sub(1)];
                idArray.pop();
                if (currIdLength == 1) {
                    if (i == levelsLength.sub(1)) {
                        rateArray[i.sub(1)] = rateArray[i];
                    }else{
                        for (uint256 j = i; j < levelsLength.sub(1); j++) {
                            rateArray[j] = rateArray[j+1];
                            levelArray[j] = levelArray[j+1];
                        }
                        
                    }
                    levelArray.pop();
                    rateArray.pop();
                }
                
                break;
            }
        }

        tapFantasy.safeTransferFrom(approveAddress, addr, nftID);
        uint256 tokenId = reqIdByTokenId[requestId];
        emit eveTapNFT(addr, tokenId, nftID);
    }

    // for dao
    function setBlindBox (
        uint256 rule,
        uint256 startTime_,
        uint256[] memory rateArray_,
        uint256 baseRate_,
        IERC721 tapFantasy_)
        public onlyGovernance {
            currentProj = rule;
            startTime = startTime_;
            rateArray = rateArray_;
            baseRate = baseRate_;
            tapFantasy = tapFantasy_;
    }

    // add array
    function setLevelArrayByArray(uint256[] memory arr, uint256 index) public onlyGovernance {
        uint256[] storage indexLevel = levelArray[index];
        for (uint256 i = 0; i < arr.length; i++) {
            indexLevel.push(arr[i]);
        }
    }

    // add id [f,t]
    function setLevelArrayByIds(uint256 fromId, uint256 toId, uint256 index) public onlyGovernance {
        uint256[] storage indexLevel = levelArray[index];
        for (uint256 i = fromId; i <= toId; i++) {
            indexLevel.push(i);
        }
    }

    // gas limit
    function setLevelArray(uint256[][] memory arr) public onlyGovernance {
        levelArray = arr;
    }

    function setApproveAddress(address addr) public onlyGovernance {
        approveAddress = addr;
    }

    // Implement a withdraw function to avoid locking your LINK in the contract
    function withdrawLink(address token, uint256 amount) external onlyGovernance {
        IERC20(token).safeTransfer(_governance, amount);
    }

    function onERC721Received(address operator, address from, uint256 tokenId, bytes memory data) public returns (bytes4) {
        
        if(address(this) != operator) {
            return 0;
        }
        //success
        emit eveNFTReceived(operator, from, tokenId, data);
        return bytes4(keccak256("onERC721Received(address,address,uint256,bytes)"));
    }
