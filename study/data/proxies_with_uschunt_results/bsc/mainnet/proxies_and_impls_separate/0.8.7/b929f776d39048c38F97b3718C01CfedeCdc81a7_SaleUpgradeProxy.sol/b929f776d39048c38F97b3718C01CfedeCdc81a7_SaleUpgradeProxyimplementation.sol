        if (totalAmount > raisingAmount) {
            for (uint256 i = 0; i < OFFERING_TOKENS; ++i) {
                uint256 offeringAmount = offeringAmounts[i];
                amounts[i] = ((offeringAmount * getUserAllocation(_user)) / 1e12);
