contract DealCollectWalletCreator is AdminableUpgradeable {

    string internal constant DEAL_WALLET_HASH = "__DealCollectWallet_init(address,address,(address,uint256,uint256,uint256,uint256,uint256,uint256,bool),address)";

    IDealLockups public dealLockups;
    IVerifier public verifier;
    ILocker public locker;
    ITierCalculator public tierCalculator;

    address public dealWalletImpl;
    address public proxyAdmin;

    mapping(address => bool) public deals;

    event SetTierCalculator(address tierCalculator);
    event SetCollectWalletImpl(address dealWalletImpl);
    event SetProxyAdmin(address proxyAdmin);

    event DealCreated(
        address dealAddress,
        address paymentToken,
        uint256 tokenPrice,
        uint256 startTimestamp,
        uint256 finishTimestamp,
        uint256 startClaimTimestamp,
        uint256 minimumRaise,
        uint256 maxDistributedTokenAmount,
        bool allowRefund
    );

    modifier onlyDeals {
        require(deals[msg.sender], "Only deal can call");
        _;
    }

    function __DealCollectWalletCreator_init(
        IDealLockups _dealLockups,
        IVerifier _verifier,
        ILocker _locker,
        ITierCalculator _tierCalculator,
        address _dealWalletImpl,
        address _proxyAdmin
    ) public initializer {
        __Adminable_init();

        dealLockups = _dealLockups;
        verifier = _verifier;
        locker = _locker;
        tierCalculator = _tierCalculator;
        dealWalletImpl = _dealWalletImpl;
        proxyAdmin = _proxyAdmin;
    }

    function createDeal(IDealCreator.WalletInit memory _walletInit) external onlyOwnerOrAdmin returns (address) {
        require(dealWalletImpl != address(0), "createDeal: dealWalletImplementation has not been set");

        bytes memory data = abi.encodeWithSignature(
            DEAL_WALLET_HASH,
            address(verifier),
            address(locker),
            _walletInit,
            address(this));

        TransparentUpgradeableProxy proxy = new TransparentUpgradeableProxy(dealWalletImpl, proxyAdmin, data);

        if (isAdmin[msg.sender]) {
            IDeal(address(proxy)).setAdminPermission(msg.sender, true);
        }
        IDeal(address(proxy)).transferOwnership(owner());

        emit DealCreated(
            address(proxy),
            address(_walletInit.paymentToken),
            _walletInit.tokenPrice,
            _walletInit.startTimestamp,
            _walletInit.finishTimestamp,
            _walletInit.startClaimTimestamp,
            _walletInit.minimumRaise,
            _walletInit.maxDistributedTokenAmount,
            _walletInit.allowRefund
        );

        deals[address(proxy)] = true;

        return address(proxy);
    }

