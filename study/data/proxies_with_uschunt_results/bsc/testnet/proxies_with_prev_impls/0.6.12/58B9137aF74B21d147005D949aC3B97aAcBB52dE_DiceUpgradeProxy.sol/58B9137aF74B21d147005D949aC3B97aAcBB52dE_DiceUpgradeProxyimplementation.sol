contract dicegame is Ownable, Pausable, SignatureChecker{
    
    using SafeMath for uint256;
    using SafeBEP20 for IBEP20;
    
    IBEP20 public busd;
    IBEP20 public iron;
    
    bool public initialized;
    
    struct userStore{
        uint256 amountIn;
        uint256 amountOut;
    }
    
    mapping (address => userStore) public userInfo;
    
    event _deposit(address indexed from,uint256 _amount,uint256 _winAmount,uint8 _type,bool status,uint256 _time);
    
    receive() external payable {}
    
    fallback() external payable {}
    
    function initialize(address _iron,address _busd,address _owner) public{
        require(!initialized, "Contract instance has already been initialized");
        _setOwner(_owner);
        initialized = true;
        iron = IBEP20(_iron);
        busd = IBEP20(_busd);
    }

    function pause() public onlyOwner{
      _pause();
    }

    function unpause() public onlyOwner{
      _unpause();
    }
    
    function signerAddressUpdate(address _newOwner) public onlyOwner {
        signerUpdate(_newOwner);
    }
    
    function SignerAddress() public view returns (address) {
        return signerAddress;
    }
    
    struct claimParams{
        uint8 v;
        bytes32 r;
        bytes32 s;
        uint256 depositAmount;
        uint256 winningAmount;
        uint8 creditType; // type 1 is bnb, type 2 is iron,type 3 is busd
        bool wininngStatus;
        uint256 nonce;
        uint deadline;
    }
    
    function swap(claimParams memory vars) public payable whenNotPaused {
        require(vars.creditType == 1 || vars.creditType == 2 || vars.creditType == 3, "DICEGAME: invalid creditType");
        
        address behalfOf = _msgSender();
        submit(behalfOf,vars.depositAmount,vars.nonce,vars.deadline,vars.v,vars.r,vars.s);
        
        if(vars.creditType == 1){
            require(msg.value != 0, "DICEGAME: value is invalid");
            
           
           userInfo[behalfOf].amountIn = userInfo[behalfOf].amountIn.add(msg.value);
           
           if(vars.wininngStatus){
               (bool success,) = (behalfOf).call{value: vars.winningAmount}("");
               require(success, "Transaction failed");
               userInfo[behalfOf].amountOut = userInfo[behalfOf].amountOut.add(vars.winningAmount);
           }
           
           emit _deposit(behalfOf,msg.value,vars.winningAmount,vars.creditType,vars.wininngStatus,block.timestamp);
        }else if(vars.creditType == 2){
            require(vars.depositAmount != 0, "DICEGAME: value is invalid");
            
            iron.safeTransferFrom(msg.sender,address(this),vars.depositAmount);
            userInfo[behalfOf].amountIn = userInfo[behalfOf].amountIn.add(vars.depositAmount);
            
            if(vars.wininngStatus){
               iron.safeTransfer(behalfOf,vars.winningAmount);
               userInfo[behalfOf].amountOut = userInfo[behalfOf].amountOut.add(vars.winningAmount);
            }
            
            emit _deposit(behalfOf,vars.depositAmount,vars.winningAmount,vars.creditType,vars.wininngStatus,block.timestamp);
        }else {
            require(vars.depositAmount != 0, "DICEGAME: value is invalid");
            
            busd.safeTransferFrom(msg.sender,address(this),vars.depositAmount);
            userInfo[behalfOf].amountIn = userInfo[behalfOf].amountIn.add(vars.depositAmount);
            
            if(vars.wininngStatus){
               busd.safeTransfer(behalfOf,vars.winningAmount);
               userInfo[behalfOf].amountOut = userInfo[behalfOf].amountOut.add(vars.winningAmount);
            }
            
            emit _deposit(behalfOf,vars.depositAmount,vars.winningAmount,vars.creditType,vars.wininngStatus,block.timestamp);
        }
    }
    
    function tokenEmergencySafe(IBEP20 _token,uint256 _amount) public onlyOwner {
        IBEP20(_token).safeTransfer(owner(),_amount);
    }
    
    function bnbEmergencySafe(uint256 _amount) public onlyOwner {
         (bool success,) = (owner()).call{value:_amount}("");
         require(success, "Transaction failed");
    }

