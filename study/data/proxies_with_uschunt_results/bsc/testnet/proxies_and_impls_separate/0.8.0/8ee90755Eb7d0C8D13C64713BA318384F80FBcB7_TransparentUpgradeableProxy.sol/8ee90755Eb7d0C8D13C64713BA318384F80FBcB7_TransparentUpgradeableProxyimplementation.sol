contract DCHContract is Initializable,ContextUpgradeable,OwnableUpgradeable{
    using SafeMath for uint256;
    using Address for address;

    address mainAddress;

    mapping(address => mapping(uint256 => PledgeInfo)) public _pledge;
    mapping(uint256 => uint256) public _apys;
    ApyInfo[] public _apyInfos;
    uint256 _awardRate;

    mapping(address => address) public _invite;
    mapping(address => Leader) public _leaderInfos;
    mapping(address=>uint256) public _totalIncome;

    struct ApyInfo {
        uint256 cycle;
        uint256 apy;
    }

    struct PledgeInfo {
        uint256 balance;
        uint256 apy;
        uint256 pledgeTime;
        uint256 awardTime;
        //        uint256 price;
    }

    struct Leader {
        address[] beInvites;
        uint256 totalPerformance;
        uint256 totalAward;
    }

    struct MainInfo {
        uint256 tokenBalance;
        uint256 tokenAllowance;
//        uint256 intervals;
    }

    function initialize() public initializer{
        mainAddress = 0x3Ca4Ea5525C6692d64FE9C083e34B3B5333496A8;
        _awardRate = 1000;

        _apys[30] = 16;
        _apys[90] = 20;
        _apys[180] = 25;
        _apys[360] = 30;

        _apyInfos.push(ApyInfo(30,16));
        _apyInfos.push(ApyInfo(90,20));
        _apyInfos.push(ApyInfo(180,25));
        _apyInfos.push(ApyInfo(360,30));
    }


    function totalInfo() public view returns (MainInfo memory){
        IERC20 mainToken = IERC20(mainAddress);
        return MainInfo(
            mainToken.balanceOf(_msgSender()),
            mainToken.allowance(_msgSender(), address(this))
//            , _intervals
        );
    }

    function doPledge(uint256 cycle, uint256 amount) public {
        require(_apys[cycle] > 0, "error");
        if (_pledge[_msgSender()][cycle].balance > 0) {
            awardWithdraw(cycle);
        }
        IERC20 mainToken = IERC20(mainAddress);
        mainToken.transferFrom(_msgSender(), address(this), amount);
        _pledge[_msgSender()][cycle].balance = _pledge[_msgSender()][cycle].balance.add(amount);
        _pledge[_msgSender()][cycle].apy = _apys[cycle];
        _pledge[_msgSender()][cycle].pledgeTime = block.timestamp;

        uint256 award = amount.mul(_apys[cycle]).mul(cycle).mul(_awardRate).div(10000).div(10000);
        _leaderInfos[_invite[_msgSender()]].totalAward = _leaderInfos[_invite[_msgSender()]].totalAward.add(award);
        mainToken.transfer(_invite[_msgSender()],award);
//        _leaderInfos[_invite[_msgSender()]].totalPerformance = _leaderInfos[_invite[_msgSender()]].totalPerformance.add(amount);
    }

    function awardWithdraw(uint256 cycle) public {
        require(_pledge[_msgSender()][cycle].balance > 0, "no award");
        uint256 times;
        if (_pledge[_msgSender()][cycle].pledgeTime > _pledge[_msgSender()][cycle].awardTime) {
            times = block.timestamp - _pledge[_msgSender()][cycle].pledgeTime;
        } else {
            times = block.timestamp - _pledge[_msgSender()][cycle].awardTime;
        }

        uint256 dayTimes = times.div(1 days);
        require(dayTimes > 0,"dayTimes must > 0");
        uint256 remainingTimes = dayTimes.mod(1 days);

        uint256 award = _pledge[_msgSender()][cycle].balance.mul(_pledge[_msgSender()][cycle].apy).mul(dayTimes).div(10000);
        IERC20 mainToken = IERC20(mainAddress);
        mainToken.transfer(_msgSender(), award);
        _pledge[_msgSender()][cycle].awardTime = block.timestamp - remainingTimes;
        _totalIncome[_msgSender()] = _totalIncome[_msgSender()].add(award);
    }

    function pledgeWithdraw(uint256 cycle) public {
        require(block.timestamp - _pledge[_msgSender()][cycle].pledgeTime > cycle * 1 days, "not expired");
        awardWithdraw(cycle);
        IERC20 mainToken = IERC20(mainAddress);
        mainToken.transfer(_msgSender(), _pledge[_msgSender()][cycle].balance);
        _pledge[_msgSender()][cycle].balance = 0;
    }

    function getBeInvites(address leader) public view returns (address[] memory){
        return _leaderInfos[leader].beInvites;
    }

    function getLeaderInfo(address leader) public view returns (Leader memory){
        return _leaderInfos[leader];
    }

    function setAddressInvite(address target, address invite) external onlyOwner() {
        for (uint256 i = 0; i < _leaderInfos[_invite[target]].beInvites.length; i++) {
            if (_leaderInfos[_invite[target]].beInvites[i] == target) {
                _leaderInfos[_invite[target]].beInvites[i] = address(0);
//                _leaderInfos[_invite[target]].totalNum = _leaderInfos[_invite[target]].totalNum .sub(1);
                break;
            }
        }
        _invite[target] = invite;
        _leaderInfos[invite].beInvites.push(target);
//        _leaderInfos[invite].totalNum = _leaderInfos[invite].totalNum.add(1);
    }

    function setInvite(address invite) public {
        require(_invite[_msgSender()] == address(0), "The inviter cannot be set repeatedly");
        require(_msgSender() != invite, "The inviter cannot be yourself");
        _invite[_msgSender()] = invite;
        _leaderInfos[invite].beInvites.push(_msgSender());
    }

    function getApyInfos() public view returns(ApyInfo[] memory){
        return _apyInfos;
    }

    function setApy(uint256 cycle, uint256 apy) public {
        _apys[cycle] = apy;
        bool hasPush = false;
        for(uint256 i = 0;i<_apyInfos.length;i++){
            if(_apyInfos[i].cycle == cycle){
                _apyInfos[i].apy = apy;
                hasPush = true;
            }
        }
        if(!hasPush){
            _apyInfos.push(ApyInfo(cycle,apy));
        }
    }
}


