            lastAuctionNumbers[_collectionAddress] +
            1;

        uint256 _auctionId = lastAuctionNumbers[_collectionAddress];
        asksMap[_collectionAddress][_quoteToken].set(_tokenId, _price);
        askAuctionsMap[_collectionAddress].set(_tokenId, _auctionId);
        tokenSellers[_collectionAddress][_tokenId] = msg.sender;
        userSellingTokens[_collectionAddress][msg.sender].add(_tokenId);

        emit Ask(
            msg.sender,
            _collectionAddress,
            _auctionId,
            _tokenId,
            _quoteToken,
            _price,
            _category
        );
    }

    /**
     * @dev                         Put nft asset on sell list
     * @param _collectionAddress    The address of nft collection
     * @param _tokenId              The token id of nft collection
     * @param _quoteToken           The quote token for nft exchange
     */
    function cancelSellToken(
        address _collectionAddress,
        uint256 _tokenId,
        address _quoteToken
    )
        external
        whenNotPaused
        validAddress(_collectionAddress)
        validAddress(_quoteToken)
        isExistedQuoteToken(_quoteToken)
    {
        require(
            userSellingTokens[_collectionAddress][msg.sender].contains(
                _tokenId
            ),
            "Only Seller can cancel sell token"
        );
        _checkAuction(_collectionAddress, _quoteToken, _tokenId);

        uint256 _auctionId = askAuctionsMap[_collectionAddress].get(_tokenId);
        address _seller = tokenSellers[_collectionAddress][_tokenId];
        userSellingTokens[_collectionAddress][_seller].remove(_tokenId);
        asksMap[_collectionAddress][_quoteToken].remove(_tokenId);
        askAuctionsMap[_collectionAddress].remove(_tokenId);
        delete tokenSellers[_collectionAddress][_tokenId];

        emit CancelSellToken(
            _seller,
            _collectionAddress,
            _auctionId,
            _tokenId,
            _quoteToken
        );
    }

    /**
     * @dev                         Update nft price in sell list
     * @param _collectionAddress    The address of nft collection
     * @param _tokenId              The token id of nft collection
     * @param _quoteToken           The quote token for nft exchange
     * @param _price                The price of quote token
     */
    function setCurrentPrice(
        address _collectionAddress,
        uint256 _tokenId,
        address _quoteToken,
        uint256 _price
    )
        external
        whenNotPaused
        validAddress(_collectionAddress)
        validAddress(_quoteToken)
        isExistedQuoteToken(_quoteToken)
        validPrice(_price)
    {
        require(
            userSellingTokens[_collectionAddress][msg.sender].contains(
                _tokenId
            ),
            "Only Seller can update price"
        );
        _checkAuction(_collectionAddress, _quoteToken, _tokenId);

        asksMap[_collectionAddress][_quoteToken].set(_tokenId, _price);

        emit Ask(
            msg.sender,
            _collectionAddress,
            askAuctionsMap[_collectionAddress].get(_tokenId),
            _tokenId,
            _quoteToken,
            _price,
            ""
        );
    }

    /**
     * @dev                         Bid to buy token asset in marketplace list
     * @param _collectionAddress    The address of nft collection
     * @param _tokenId              The token id of nft collection
     * @param _quoteToken           The quote token for nft exchange
     * @param _price                The price of quote token
     */
    function bidToBuyToken(
        address _collectionAddress,
        uint256 _tokenId,
        address _quoteToken,
        uint256 _price
    )
        external
        whenNotPaused
        validAddress(_collectionAddress)
        validAddress(_quoteToken)
        isExistedQuoteToken(_quoteToken)
        validPrice(_price)
    {
        require(
            msg.sender != IERC721(_collectionAddress).ownerOf(_tokenId),
            "Token Owner can't buy his token"
        );
        uint256 askPrice = asksMap[_collectionAddress][_quoteToken].get(
            _tokenId
        );
        require(_price >= askPrice, "Price must be granter than ask price");
        _checkAuction(_collectionAddress, _quoteToken, _tokenId);

        uint256 _auctionId = askAuctionsMap[_collectionAddress].get(_tokenId);
        tokenBuyers[_collectionAddress][_auctionId][msg.sender] = BidInfo({
            quoteToken: _quoteToken,
            price: _price
        });

        emit Bid(
            msg.sender,
            _collectionAddress,
            _auctionId,
            _tokenId,
            _quoteToken,
            _price
        );
    }

    /**
     * @dev                         Sell token asset to buyer address
     * @param _collectionAddress    The address of nft collection
     * @param _tokenId              The token id of nft collection
     * @param _buyer                The buyer address who wants to buy nft asset
     * @param _quoteToken           The quote token for nft exchange
     */
    function sellToken(
        address _collectionAddress,
        uint256 _tokenId,
        address _buyer,
        address _quoteToken
    )
        external
        whenNotPaused
        validAddress(_collectionAddress)
        validAddress(_quoteToken)
        isExistedQuoteToken(_quoteToken)
    {
        require(
            msg.sender == IERC721(_collectionAddress).ownerOf(_tokenId),
            "Only token owner can sell token"
        );
        require(
            _buyer != IERC721(_collectionAddress).ownerOf(_tokenId),
            "Can't sell to token owner"
        );
        _checkAuction(_collectionAddress, _quoteToken, _tokenId);

        uint256 auctionId = askAuctionsMap[_collectionAddress].get(_tokenId);
        require(
            tokenBuyers[_collectionAddress][auctionId][_buyer].quoteToken ==
                _quoteToken,
            "Buyer did not bid yet"
        );
        require(
            tokenBuyers[_collectionAddress][auctionId][_buyer].price != 0,
            "Buyer did not bid yet"
        );
        require(
            IERC20(_quoteToken).balanceOf(_buyer) >=
                tokenBuyers[_collectionAddress][auctionId][_buyer].price,
            "Buyer does not have enough money"
        );

        IERC721(_collectionAddress).safeTransferFrom(
            IERC721(_collectionAddress).ownerOf(_tokenId),
            _buyer,
            _tokenId
        );

        address _seller = tokenSellers[_collectionAddress][_tokenId];
        uint256 _sellPrice = tokenBuyers[_collectionAddress][auctionId][_buyer]
            .price;
        uint256 _sellFeeForPlatform = _sellPrice.mul(platformFee).div(100);

        if (_sellFeeForPlatform > 0) {
            IERC20(_quoteToken).safeTransferFrom(
                _buyer,
                platformAddr,
                _sellFeeForPlatform
            );
        }
        IERC20(_quoteToken).safeTransferFrom(
            _buyer,
            _seller,
            _sellPrice.sub(_sellFeeForPlatform)
        );
        asksMap[_collectionAddress][_quoteToken].remove(_tokenId);
        askAuctionsMap[_collectionAddress].remove(_tokenId);
        userSellingTokens[_collectionAddress][_seller].remove(_tokenId);

        emit Trade(
            _seller,
            _buyer,
            _collectionAddress,
            _tokenId,
            _quoteToken,
            _sellPrice
        );
        delete tokenSellers[_collectionAddress][_tokenId];
    }

    /**
     * @dev                         Vote nft token with token id on marketplace
     * @param _collectionAddress    The address of nft collection
     * @param _tokenId              The token id of nft collection
     */
    function voteToken(address _collectionAddress, uint256 _tokenId)
        external
        whenNotPaused
        validAddress(_collectionAddress)
    {
        require(
            msg.sender != IERC721(_collectionAddress).ownerOf(_tokenId),
            "Token owner can't vote token"
        );

        require(
            nftTokenVoters[_collectionAddress][_tokenId][msg.sender] == false,
            "Users can't vote 2 times for the same token"
        );

        require(
            askAuctionsMap[_collectionAddress].contains(_tokenId),
            "Auction was not created"
        );

        nftTokenVoters[_collectionAddress][_tokenId][msg.sender] = true;
        nftTokenVoteCnt[_collectionAddress][_tokenId] = nftTokenVoteCnt[
            _collectionAddress
        ][_tokenId].add(1);

        emit Vote(msg.sender, _collectionAddress, _tokenId);
    }

    /**
     * @dev                         check if user can vote a specific token asset with nft collection id and token id
     * @param _collectionAddress    The address of nft collection
     * @param _tokenId              The token id of nft collection
     */
    function getUserCanVote(
        address _user,
        address _collectionAddress,
        uint256 _tokenId
    )
        external
        view
        validAddress(_collectionAddress)
        validAddress(_user)
        returns (bool)
    {
        if (askAuctionsMap[_collectionAddress].contains(_tokenId) == false) {
            return false;
        }
        if (_user == IERC721(_collectionAddress).ownerOf(_tokenId)) {
            return false;
        }
        return !nftTokenVoters[_collectionAddress][_tokenId][_user];
    }

    /**
     * @dev                         Get vote count of nft asset from collection address and token id
     * @param _collectionAddress    The address of nft collection
     * @param _tokenId              The token id of nft collection
     */
    function getNftTokenVoteCnt(address _collectionAddress, uint256 _tokenId)
        external
        view
        validAddress(_collectionAddress)
        returns (uint256)
    {
        return nftTokenVoteCnt[_collectionAddress][_tokenId];
    }

