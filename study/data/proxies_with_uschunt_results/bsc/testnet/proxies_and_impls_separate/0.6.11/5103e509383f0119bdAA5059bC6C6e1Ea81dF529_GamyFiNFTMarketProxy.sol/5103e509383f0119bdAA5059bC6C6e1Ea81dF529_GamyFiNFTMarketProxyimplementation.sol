     * @dev                     Pause contract
     */
    function pause() public onlyOwner whenNotPaused {
        _pause();
    }

    /**
     * @dev                     Unpause contract
     */
    function unpause() public onlyOwner whenPaused {
        _unpause();
    }

    /**
     * @dev                         Update platform address that receives platform fee
     * @param _platformAddr         The new platform fee receiving address
     */
    function updatePlatformAddress(address _platformAddr) external onlyOwner {
        platformAddr = _platformAddr;
    }

    /**
     * @dev                         Update platform fee
     * @param _platformFee          The amount of platform fee that is calculated in sell transaction
     */
    function updatePlatformFee(uint256 _platformFee) external onlyOwner {
        platformFee = _platformFee;
    }

    /**
     * @dev                         Get all supported quote tokens
     */
    function getQuoteTokens() external view returns (address[] memory) {
        return quoteTokens;
    }

    /**
     * @dev                         Get auction id of token asset from token collection address and token id
     * @param _collectionAddress    The address of nft collection
     * @param _tokenId              The token id of nft collection
     */
    function getAuctionId(address _collectionAddress, uint256 _tokenId)
        external
        view
        returns (uint256)
    {
        if (askAuctionsMap[_collectionAddress].contains(_tokenId)) {
            return askAuctionsMap[_collectionAddress].get(_tokenId);
        }
        return 0;
    }

    modifier validAddress(address _address) {
        require(
            _address != address(0) && _address != address(this),
            "Address is Zero address or invalid address"
        );
        _;
    }

    modifier validPrice(uint256 _price) {
        require(_price > 0, "Price must be granter than zero");
        _;
    }

    modifier isExistedQuoteToken(address _quoteToken) {
        bool isExisted;
        for (uint256 i = 0; i < quoteTokens.length; i++) {
            if (quoteTokens[i] == _quoteToken) {
                isExisted = true;
                break;
            }
        }
        require(isExisted == true, "Quote Token was not listed yet");
        _;
    }

    function _checkAuction(
        address _collectionAddress,
        address _quoteToken,
        uint256 _tokenId
    ) internal view {
        require(
            askAuctionsMap[_collectionAddress].contains(_tokenId),
            "Auction was not created"
        );
        require(
            asksMap[_collectionAddress][_quoteToken].contains(_tokenId),
            "Auction was not started with the current quote token"
        );
    }

    // internal functions
    function _addQuoteToken(address _quoteToken)
        internal
        validAddress(_quoteToken)
    {
        for (uint256 i = 0; i < quoteTokens.length; i++) {
            if (quoteTokens[i] == _quoteToken) {
                revert("Quote Token is already existed");
            }
        }
        quoteTokens.push(_quoteToken);
    }
