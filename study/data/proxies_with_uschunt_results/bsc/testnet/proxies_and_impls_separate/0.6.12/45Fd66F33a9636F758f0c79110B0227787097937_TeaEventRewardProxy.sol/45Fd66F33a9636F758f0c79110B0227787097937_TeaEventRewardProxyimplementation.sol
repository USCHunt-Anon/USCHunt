contract TeaEventAirdrop is Ownable {
    using SafeMath for uint256;
    using SafeBEP20 for IBEP20;

    struct EventConfig {
        address token;
        bool isPause;
    }

    mapping(uint256 => EventConfig) public eventConfig;
    mapping(uint256 => mapping(address => uint256)) public userReward;
    mapping(uint256 => mapping(address => bool)) public alreadyClaim;
    mapping(uint256 => bool) public poolCreated;

    uint256[] public events;
    bool public initSmc;

    event Claim(uint256 indexed eventId, address indexed user);

    function init() public {
        require(!initSmc,"init");
        intOwnable();
        initSmc = true;
    }

    function lengthEvent() public view returns (uint256){
        return events.length;
    }

    function changeEventConfig(uint256 _eventId, address _token, bool _is) public onlyOwner {
        eventConfig[_eventId] = EventConfig(_token, _is);
    }

    function changeAlreadyClaim(uint256 _eventId, address[] calldata _users, bool _is) external onlyOwner {
        for (uint256 i = 0; i < _users.length; i++) {
            alreadyClaim[_eventId][_users[i]] = _is;
        }
    }

    function changeUserReward(uint256 _eventId, address[] calldata _users, uint256[] calldata _amounts) external onlyOwner {
        require(_users.length == _amounts.length, "invalid input");
        for (uint256 i = 0; i < _users.length; i++) {
            userReward[_eventId][_users[i]] = _amounts[i];
        }
    }

    function createEvent(uint256 _eventId, address _token, address[] calldata _users, uint256[] calldata _amounts) external onlyOwner {
        require(_users.length == _amounts.length, "invalid input");
        if (poolCreated[_eventId] == false) {
            events.push(_eventId);
            poolCreated[_eventId] = true;
        }
        eventConfig[_eventId].token = _token;
        for (uint256 i = 0; i < _users.length; i++) {
            userReward[_eventId][_users[i]] = _amounts[i];
        }
    }

    function claim(uint256 _eventId, address _user) external {
        require(!alreadyClaim[_eventId][_user], "already claim");
        require(eventConfig[_eventId].isPause == false, "event close");
        require(eventConfig[_eventId].token != address(0), "event not found");
        IBEP20(eventConfig[_eventId].token).safeTransfer(_user, userReward[_eventId][_user]);
        alreadyClaim[_eventId][_user] = true;
        emit Claim(_eventId, _user);
    }

    function clearERC20(IBEP20 token, address to, uint256 amount) external onlyOwner {
        token.safeTransfer(to, amount);
    }

}